<h1>Team Rankings</h1>


<div id='weekly_stat_list_placeholder'></div>


<div class="well">
	<legend>Add Research Here:</legend>
	<input id="research_input" type="text" placeholder="[Team Name] [FG%] [FT%] [3PTM] [PTS] [REB] [AST] [ST] [BLK] [TO]" style="width: 600px">
	<button id="add_research_button" class="btn btn-large" href="#myModal">Add data</button>
</div>

	<script type="text/template" id="weekly_stat_template">
		<td>[[= team.attributes.name ]]</td>
		<td>[[= field_goal_percentage ]]</td>
		<td>[[= free_throw_percentage ]]</td>		
		<td>[[= three_pointers_made ]]</td>
		<td>[[= total_points ]]</td>
		<td>[[= rebounds ]]</td>
		<td>[[= assists ]]</td>
		<td>[[= steals ]]</td>
		<td>[[= blocks ]]</td>
		<td>[[= turnovers]]</td>
	</script>


<!-- ********************** Modal Dialog **************************-->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Add Weekly Stats</h3>
  </div>
  <%= form_for @weeklyStat=WeeklyStat.new, :url => { :action => "create"}, :html => {:class => "nifty_form"} do |f| %>
	  <div class="modal-body">  	
	    <p>One fine body…</p>
	  </div>
	  <div class="modal-footer">
	    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
	    <button class="btn btn-primary">Save changes</button>
	  </div>
	 <% end %> 
</div>
<!-- *********************** End Modal  ***************************-->
